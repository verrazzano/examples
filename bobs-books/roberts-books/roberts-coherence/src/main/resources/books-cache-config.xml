<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
        xmlns:load="class://org.books.robert.LoadNamespaceHandler"
        xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">

    <load:books file="books.csv"/>

    <defaults>
        <serializer>pof</serializer>
    </defaults>

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>books</cache-name>
            <scheme-name>books</scheme-name>
        </cache-mapping>
        <cache-mapping>
            <cache-name>orders</cache-name>
            <scheme-name>orders</scheme-name>
        </cache-mapping>
        <cache-mapping>
            <cache-name>loaders</cache-name>
            <scheme-name>sys</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>

    <caching-schemes>
        <proxy-scheme>
            <scheme-name>robert-proxy-scheme</scheme-name>
            <service-name>robert-proxy-service</service-name>
            <acceptor-config>
                <!-- empty tcp-acceptor means to use the name service -->
                <tcp-acceptor>
                    <local-address>
                        <address system-property="tangosol.coherence.address">0.0.0.0</address>
                        <port>9000</port>
                    </local-address>
                </tcp-acceptor>
            </acceptor-config>
            <proxy-config>
                <cache-service-proxy>
                    <enabled>true</enabled>
                </cache-service-proxy>
            </proxy-config>
            <load-balancer>client</load-balancer>
            <autostart>true</autostart>
        </proxy-scheme>

        <distributed-scheme>
            <scheme-name>books</scheme-name>
            <service-name>Books</service-name>
            <backing-map-scheme>
                <local-scheme>
                    <unit-calculator>BINARY</unit-calculator>
                </local-scheme>
            </backing-map-scheme>
            <autostart>true</autostart>
        </distributed-scheme>

        <distributed-scheme>
            <scheme-name>orders</scheme-name>
            <service-name>Orders</service-name>
            <backing-map-scheme>
                <read-write-backing-map-scheme>
                    <internal-cache-scheme>
                        <local-scheme>
                            <unit-calculator>BINARY</unit-calculator>
                        </local-scheme>
                    </internal-cache-scheme>
                    <cachestore-scheme>
                        <class-scheme>
                            <class-name>org.books.robert.OrderProcessor</class-name>
                        </class-scheme>
                    </cachestore-scheme>
                    <write-delay>5s</write-delay>
                </read-write-backing-map-scheme>
            </backing-map-scheme>
            <autostart>true</autostart>
        </distributed-scheme>

        <distributed-scheme>
            <scheme-name>sys</scheme-name>
            <service-name>System</service-name>
            <backing-map-scheme>
                <local-scheme>
                    <unit-calculator>BINARY</unit-calculator>
                </local-scheme>
            </backing-map-scheme>
            <autostart>true</autostart>
        </distributed-scheme>
    </caching-schemes>

</cache-config>


